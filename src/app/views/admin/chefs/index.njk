{% extends "admin/layout.njk" %}

{% set title = "Foodify - Admin - Chef" %}

{% block styles %}
  <link rel="stylesheet" href="/styles/admin/index.css">
  <link rel="stylesheet" href="/styles/admin/chefs/index.css">
{% endblock styles %}

{% block main %}

  <main>
    <div class="head">
      <h3>Gerenciar Chefs</h3>
      <a type="button" href="/admin/chefs/create"><span>Novo Chef</span></a>
    </div>
    
      <div class="cards">
        {% for data in chefs %}
        
          <div class="card" id="{{data.id}}">
            <img src="{{data.avatar_url}}" alt="{{data.name}} avatar">
            <div class="card-info">
              <h4 class="card-name">
                {{data.name}}
              </h4>

              <a href="/admin/chefs/{{data.id}}">Visualizar</a>

            </div>
          </div>
        {% endfor %}
      </div>
  </main>

{% endblock main %}
